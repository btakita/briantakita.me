---
import type { Post, SearchItem } from '@btakita/domain--any--blog'
import { sorted_dehydrated_post_meta_a1__new } from '@btakita/domain--server--blog'
import { blog__search__main_c_ } from '@btakita/ui--server--blog'
import { getCollection } from 'astro:content'
import R from 'relementjs/astro'
import Footer from '../../components/Footer.astro'
import Header from '../../components/Header.astro'
import { SITE } from '../../config'
import Layout from '../../layouts/Layout.astro'
import { server__ctx__new } from '../../lib'
const ctx = server__ctx__new(Astro)
const posts = sorted_dehydrated_post_meta_a1__new(await getCollection('posts') as Post[])
// List of items to search in
const search_item_a = posts.map(post=>({
	title: post.data.title,
	description: post.data.description,
	slug: post.slug,
	data: post.data,
} as SearchItem))
---

<Layout title={`Search | ${SITE.title}`}>
	<Header ctx={ctx} active="search"/>
	<R $={
		blog__search__main_c_({ ctx, search_item_a })
	}></R>
	<Footer ctx={ctx}/>
</Layout>

<script>
	import { browser_ctx__ensure } from '@btakita/domain--browser--briantakita'
	import { blog_search__div__onbind } from '@btakita/ui--browser--blog/search'
	import { dom__onbind__register } from '@ctx-core/dom'
	const ctx = browser_ctx__ensure()
	dom__onbind__register(ctx, blog_search__div__onbind)
</script>
