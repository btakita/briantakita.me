import { site__page__post_count_ } from '@btakita/domain--server--blog'
---
import { type Post } from '@btakita/domain--any--blog'
import { page__post_count_a1__new, sorted_dehydrated_post_meta_a1__new } from '@btakita/domain--server--blog'
import { getCollection } from 'astro:content'
import { blog__posts__main_c_, blog__posts__nav_ } from '@btakita/ui--server--blog'
import R from 'relementjs/astro'
import Footer from '../../components/Footer.astro'
import Header from '../../components/Header.astro'
import { SITE } from '../../config'
import Layout from '../../layouts/Layout.astro'
import { server__ctx__new } from '../../lib'
const ctx = server__ctx__new(Astro)
const posts = sorted_dehydrated_post_meta_a1__new(await getCollection('posts') as Post[])
const sorted__posts = sorted_dehydrated_post_meta_a1__new(posts)
const page_count = page__post_count_a1__new(site__page__post_count_(ctx), sorted__posts.length).length
const sorted__paginated__posts =
	sorted__posts.slice(0, SITE.page__post_count)
---

<Layout title={`Posts | ${SITE.title}`}>
	<Header ctx={ctx} active="posts"/>
	<R $={[
		blog__posts__main_c_({ ctx, posts: sorted__paginated__posts }),
		blog__posts__nav_({
			page_num: 1,
			page_count,
		})
	]}/>
	<Footer ctx={ctx}/>
</Layout>
