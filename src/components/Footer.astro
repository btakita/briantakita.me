---
import { hr_div_ } from '@btakita/ui--server--blog/hr'
import { socials_div_ } from '@btakita/ui--server--blog/social'
import { type Ctx } from 'ctx-core/object'
import R from 'relementjs/astro'
const current_year = new Date().getFullYear()
export interface Props {
	ctx:Ctx
	'no-margin-top'?:boolean;
}
const {
	ctx,
	no_margin_top = false
} = Astro.props
---

<footer class={`${no_margin_top ? '' : 'mt-auto'}`}>
	<R $={
		hr_div_({ ctx, no_padding: true })
	}/>
	<div class="footer-wrapper">
		<R $={socials_div_({ ctx, centered: true })}/>
		<div class="copyright-wrapper">
			<span>Copyright &#169; {current_year}</span>
			<span class="separator">&nbsp;|&nbsp;</span>
			<span>All rights reserved.</span>
		</div>
	</div>
</footer>

<style>
	footer {
		@apply w-full;
	}
	.footer-wrapper {
		@apply flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4;
	}
	.link-button {
		@apply my-1 p-2 hover:rotate-6;
	}
	.link-button svg {
		@apply scale-125;
	}
	.copyright-wrapper {
		@apply my-2 flex flex-col items-center whitespace-nowrap sm:flex-row;
	}
	.separator {
		@apply hidden sm:inline;
	}
</style>
