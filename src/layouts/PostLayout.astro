---
import { Main_post, Repost } from '@btakita/ui--server--blog'
import { type CollectionEntry } from 'astro:content'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import { SITE } from '../config'
import Layout from '../layouts/Layout.astro'
const { slug } = Astro.params
export interface Props {
	post:CollectionEntry<'posts'>
	id:number
}
Astro.props.id = 123
const { ctx, post } = Astro.props
const { canonical_url } = post.data
---

<Layout
	title={`Posts | ${SITE.title}`}
	canonical_url={canonical_url}
>
	<Header ctx={ctx} active="posts"/>
	<Main_post ctx={ctx} post={post}>
		{post.data.canonical_url && <Repost href={post.data.canonical_url}/>}
		<slot/>
	</Main_post>
	<Footer ctx={ctx}/>
</Layout>
